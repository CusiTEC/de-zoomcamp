import io
import pandas as pd
import requests
if 'data_loader' not in globals():
    from mage_ai.data_preparation.decorators import data_loader
if 'test' not in globals():
    from mage_ai.data_preparation.decorators import test


@data_loader
def load_data_from_api(*args, **kwargs):
    
    df_list = []

    for month in range(10, 13):
   
        url = f'https://github.com/DataTalksClub/nyc-tlc-data/releases/download/green/green_tripdata_2020-{month:02d}.csv.gz'
                #https://github.com/DataTalksClub/nyc-tlc-data/releases/download/green/green_tripdata_2020-12.csv.gz
        # Leer el archivo CSV
        df = pd.read_csv(url)
        
        # Agregar el DataFrame al lista
        df_list.append(df)

    # Concatenar los DataFrames en uno solo
    df_last_quarter = pd.concat(df_list, ignore_index=True)

    # Mostrar las primeras filas del DataFrame
    print(df_last_quarter.head())